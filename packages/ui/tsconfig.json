{
  
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx",
      "declaration": true,
      "declarationDir": "dist",
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["src"]
  }  